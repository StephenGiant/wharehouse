<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    >
<LinearLayout
    android:id="@+id/ll_categary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#607D8B"
    android:padding="5dp"

    >
    <TextView
        android:id="@+id/tv_title"
      android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="盲扫上架"
        android:textColor="#FFFFFF"

        />

</LinearLayout>

    <com.example.wms_erp.view.SearchEditText
        android:id="@+id/se_barCode"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="输入条码"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:background="@null"
        android:maxLines="1"
        />
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#666666"
    />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <Spinner

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:entries="@array/onshelve_type"
            android:spinnerMode="dropdown"
            android:id="@+id/sp_reson"></Spinner>


    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:id="@+id/onshelve_data"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    app:layoutManager="LinearLayoutManager"
    app:reverseLayout="false"


    >

</android.support.v7.widget.RecyclerView>
    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyButtonTheme"
        android:text="提  交"
        android:textSize="16sp"
        android:textColor="@color/white"

        />
</LinearLayout>