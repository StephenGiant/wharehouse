<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200斤大胖子一只"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"

        />
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44999999"
        />
<LinearLayout
    android:layout_marginTop="50dp"
    android:id="@+id/ll_reson"
android:paddingBottom="5dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"

    >

    <TextView
        android:id="@+id/subtitle"
            android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="商品条码:"
        android:textColor="@color/text_black"

        />
    <TextView
        android:id="@+id/goods_code_dialog"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111111"
        android:textSize="13sp"
        android:textColor="@color/text_gray"

        ></TextView>
</LinearLayout>
    <View
        android:layout_below="@id/ll_reson"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44999999"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_comimtinfo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44999999"
        />


    <LinearLayout
        android:id="@+id/ll_huoweiupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_reson"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:text="@string/huowei"
            />
        <EditText
            android:id="@+id/et_updateLoc"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ContentTextStyle"

            />
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_huoweiupdate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44999999"
        />
    <Button
        android:id="@+id/btn_comit"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll_huoweiupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyButtonTheme"
        android:text="确定搬移货位"

        />
</RelativeLayout>