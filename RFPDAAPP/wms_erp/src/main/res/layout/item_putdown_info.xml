<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
     android:background="@drawable/recshape_graylight"
    
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

         >

        <TextView
            android:id="@+id/tv_goodscode"
            android:layout_width="111dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="WO"
            android:textColor="#555555"
            android:textSize="16sp"
            android:visibility="visible" >
        </TextView>

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="#44000000" />

        <TextView
            android:id="@+id/tv_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:paddingLeft="5dp"

            android:text="精选蜜柚一只精选蜜柚一只精选蜜柚一只"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
     
        
         >

        <TextView
            android:id="@+id/tv_huowei"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="5dp"
            android:text="001001"
            android:textColor="#555555"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#44000000" />

        <TextView
            android:id="@+id/tv_kucunNum"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="100"
            android:textColor="#555555"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#44000000" />

        <TextView
            android:id="@+id/tv_planNum"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:text="100"
            android:textColor="#555555"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="#44000000" />

        <EditText
            android:id="@+id/et_actuallyNum"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="下架数"
           android:inputType="numberDecimal"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="#44000000" />

        <TextView
            android:id="@+id/tv_unitName"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="箱"
            android:textColor="#555555" />

        <CheckBox
            android:id="@+id/cb_comit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:padding="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#44000000" />


</LinearLayout>